    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'ndc-sendgrid'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=ndc-sendgrid",
                    "--package=ndc-sendgrid"
                ],
                "filter": {
                    "name": "ndc-sendgrid",
                    "kind": "bin"
                }
            },
            "args": [
                "serve",
                "--configuration",
                "."
            ],
            "cwd": "${workspaceFolder}"
        },
    ]
}
